{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "globalDependencies": [
    ".prettierignore",
    ".prettierrc",
    "dfx.json",
    "tsconfig.json",
    "vitest.workspace.ts"
  ],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "packages/declarations/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": []
    },
    "deploy": {
      "dependsOn": ["test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
